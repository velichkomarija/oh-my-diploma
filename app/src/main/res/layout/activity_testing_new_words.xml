<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/testingNewWordsConstLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.velickomarija.diploma.TestingNewWordsActivity">

    <LinearLayout
        android:id="@+id/testingNewWordsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textSoundRepeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:text="@string/textNewWords"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextResultTestNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="75dp"
            android:ems="20"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/button_next"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="200dp"
            android:layout_marginVertical="25dp"
            android:layout_weight="1"
            android:width="25dp"
            android:gravity="center"
            android:onClick="onClickToGoNext"
            android:paddingVertical="10dp"
            android:text="@string/next"
            android:textAlignment="center"
            android:textSize="18sp"
            android:visibility="visible" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
