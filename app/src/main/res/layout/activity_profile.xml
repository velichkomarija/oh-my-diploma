<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="com.velickomarija.diploma.views.common.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/start_profile_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            android:text="@string/enter_profile_text"
            android:textAlignment="center"
            android:textColor="#047fd1"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/name_input_field"
                android:padding="10dp"
                android:text="@string/name"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/name_input_field"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:background="@drawable/stroke"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:selectAllOnFocus="false"
                android:singleLine="true"
                android:textColor="@color/black"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/male_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:labelFor="@id/male"
                android:paddingHorizontal="10dp"
                android:text="@string/malefamale" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkedButton="@+id/male"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:buttonTint="@color/colorAccent"
                    android:checked="true"
                    android:text="@string/male"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/famale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:buttonTint="@color/colorAccent"
                    android:text="@string/famale"
                    android:textColor="@color/black" />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/age_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/age_input_field"
                android:padding="10dp"
                android:text="@string/age" />

            <EditText
                android:id="@+id/age_input_field"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:background="@drawable/stroke"
                android:imeOptions="flagNoExtractUi"
                android:inputType="text|number"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/education_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/education_input_field"
                android:padding="10dp"
                android:text="@string/education" />

            <Spinner
                android:id="@+id/education_input_field"
                style="@style/Platform.Widget.AppCompat.Spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:background="@drawable/stroke"
                android:entries="@array/edu"
                android:foregroundTint="@color/colorAccent"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:singleLine="true"
                android:spinnerMode="dialog"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/etc_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/education_input_field"
                android:padding="10dp"
                android:text="@string/etc" />

            <EditText
                android:id="@+id/etc_input_field"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:background="@drawable/stroke"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/black" />

        </LinearLayout>

        <Button
            android:id="@+id/next_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:onClick="onClickToRegistrateProfile"
            android:padding="15dp"
            android:text="@string/next"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>
