<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/start_profile_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="@string/enter_profile_text"
        android:textAlignment="center"
        android:textColor="#047fd1"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/name_input_field"
            android:padding="@dimen/_8sdp"
            android:text="@string/name"
            android:textAlignment="center"
            android:textSize="@dimen/_16sdp" />

        <EditText
            android:id="@+id/name_input_field"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/stroke"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textPersonName"
            android:padding="@dimen/_8sdp"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/male_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:labelFor="@id/male"
            android:paddingHorizontal="@dimen/_8sdp"
            android:text="@string/malefamale"
            android:textSize="@dimen/_16sdp" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/male"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:buttonTint="@color/colorAccent"
                android:checked="true"
                android:text="@string/male"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />

            <RadioButton
                android:id="@+id/famale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:buttonTint="@color/colorAccent"
                android:text="@string/famale"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/age_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/age_input"
            android:padding="@dimen/_8sdp"
            android:text="@string/age"
            android:textSize="@dimen/_16sdp" />

        <EditText
            android:id="@+id/age_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/stroke"
            android:imeOptions="flagNoExtractUi"
            android:inputType="number"
            android:maxLength="2"
            android:padding="@dimen/_4sdp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/education_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/education_input_field"
            android:padding="@dimen/_8sdp"
            android:text="@string/education"
            android:textSize="@dimen/_16sdp" />

        <Spinner
            android:id="@+id/education_input_field"
            style="@style/Platform.Widget.AppCompat.Spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/stroke"
            android:entries="@array/edu"
            android:foregroundTint="@color/colorAccent"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textPersonName"
            android:padding="@dimen/_4sdp"
            android:singleLine="true"
            android:spinnerMode="dialog"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/etc_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/education_input_field"
            android:padding="@dimen/_8sdp"
            android:text="@string/etc"
            android:textSize="@dimen/_16sdp" />

        <EditText
            android:id="@+id/etc_input_field"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/stroke"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textPersonName"
            android:padding="@dimen/_8sdp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />

    </LinearLayout>

    <Button
        android:id="@+id/next_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:paddingLeft="@dimen/_24sdp"
        android:paddingRight="@dimen/_24sdp"
        android:paddingTop="@dimen/_12sdp"
        android:text="@string/next"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sdp"
        android:textStyle="normal"
        android:visibility="visible" />
</LinearLayout>
